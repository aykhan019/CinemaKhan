<Application x:Class="CinemaPlus.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CinemaPlus"
             StartupUri="/Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionaries/Colors.xaml" x:Name="Colors"/>
                <ResourceDictionary Source="Dictionaries/ButtonStyles.xaml" x:Name="ButtonStyles"/>
                <ResourceDictionary Source="Dictionaries/ComboBoxStyles.xaml" x:Name="ComboBoxStyles"/>
                <ResourceDictionary Source="Dictionaries/ScrollViewerStyles.xaml" x:Name="ScrollViewerStyles"/>
                <ResourceDictionary Source="Dictionaries/LabelStyles.xaml" x:Name="LabelStyles"/>
                <ResourceDictionary Source="Dictionaries/TextBoxStyles.xaml" x:Name="TextBoxStyles"/>
                <ResourceDictionary Source="Dictionaries/TextBlockStyles.xaml" x:Name="TextBlockStyles"/>
                <ResourceDictionary Source="pack://application:,,,/ToastNotifications.Messages;component/Themes/Default.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application> 